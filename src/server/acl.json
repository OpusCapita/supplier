          }
      },
      {
          "type": "rest",
          "resourceId": "/api/suppliers/[^/]+$",
          "actions": ["view"],
          "responseFields": {
            "allow": ["supplierId", "supplierName", "foundedOn", "legalForm", "commercialRegisterNo", "cityOfRegistration", "countryOfRegistration", "taxIdentificationNo",
                     "vatIdentificationNo", "globalLocationNo", "dunsNo", "homePage", "status", "noVatReason", "addresses", "capabilities"]
          }
      },
      {
        "type": "rest",
        "resourceId": "/api/suppliers/[^/]+/addresses",
        "actions": ["view"]
      },
      {
        "type": "rest",
        "resourceId": "/api/suppliers/[^/]+/bank_accounts",
        "actions": ["view"]
      },
      {
        "type": "rest",
        "resourceId": "/api/suppliers/[^/]+/capabilities",
        "actions": ["view"]
      }
    ]
  },
